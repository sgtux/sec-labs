@model NetCoreWebGoat.Models.UserLoginModel

<div class="text-center">
    <h1 class="text-dark display-4">Login</h1>
    <form method="POST" asp-controller="Account" asp-action="Login">
        <input type="hidden" value="@ViewBag.ReturnUrl" name="ReturnUrl" />
        <div class="editor-field">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { placeholder = "Email" } })
            <br />
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(model => model.Password, new { placeholder = "Password" })
            <br />
            @Html.ValidationMessageFor(model => model.Password)
        </div>
        <button class="btn btn-primary">Login</button><br />
    </form>
    <a class="text-dark" href="/Account/Register">Register</a>
</div>