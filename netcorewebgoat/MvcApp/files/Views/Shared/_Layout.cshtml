@using NetCoreWebGoat.Helpers

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>NetCoreWebGoat</title>
    <link rel="stylesheet" href="~/lib/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/fontawesome/css/all.css" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <img src="~/upload/logo.jpg" class="app-logo" />
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">NetCoreWebGoat</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                @if (User.Identity.IsAuthenticated)
                {
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="~/Post">Posts</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="~/CheckReadiness">Check Readiness</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="~/CspReport">Logs</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="~/Security">Security</a>
                            </li>
                        </ul>

                        <div>
                            <img class="profile-image" src="~/upload/@StringHelper.GetProfilePhoto(User)" />
                            <span class="username-toolbar"
                            onclick="window.location = '/Account/Edit'">@User.Identity.Name</span>
                            <i class="fas fa-sign-out-alt lk-logout" onclick="logout()"></i>
                        </div>
                }
                    </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - NetCoreWebGoat
        </div>
    </footer>
    <script src="~/lib/jquery.min.js"></script>
    <script src="~/lib/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>

</html>
